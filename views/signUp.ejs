<div class="row pt-5">
    <div class="col-md-6 mx-auto">
        <div class="card rounded-0">
            <div class="card-header">
                <h3 class="mb-0"><%= title %></h3>
            </div>
            <div class="card-body">
                <form action="/signUp/create" method="POST" class="form">
                    <div class="form-group">
                        
                        <input  name="name" type="text" class="form-control rounded-0" placeholder="Your Name"required>

                    </div>
                    <div class="form-group">
                        
                        <input  name="email" type="email" class="form-control rounded-0" placeholder="Your Email"required>

                    </div>
                    <div class="form-group">
                        
                        <input  name="password" type="password" placeholder="Password" class="form-control rounded-0" required>
                        
                    </div>
                    <div class="form-group">
                        
                        <input  name="confirm_password" type="password" class="form-control rounded-0" placeholder="Confirm-Password"required>

                    </div>
                    <div class="form-group">
                        
                        <input  name="submit" type="submit" class="form-control rounded-0" required>

                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>
