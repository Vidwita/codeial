
<div class="row pt-5">
    <div class="col-md-6 mx-auto">
        <div class="card rounded-0">
            <div class="card-header">
                <h3 class="mb-0"><%= title %></h3>
               
            </div>
            <div class="card-body">
                <form action="/signIn/create-session" method="POST" class="form">
                    <div class="form-group">
                        
                        <input placeholder="Email" name="email" type="text" class="form-control rounded-0" required>

                    </div>
                    <div class="form-group">
                        
                        <input placeholder="Password"  name="password" type="password" class="form-control rounded-0" required>
                        
                    </div>
                    <div class="form-group">
                        
                        <input   name="submit" type="submit" class="form-control rounded-0" required>
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

